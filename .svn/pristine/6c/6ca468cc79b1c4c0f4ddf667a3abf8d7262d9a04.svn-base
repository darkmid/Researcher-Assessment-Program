<UserControl x:Class="RAP.ResearcherDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAP"
             mc:Ignorable="d" 
             d:DesignHeight="420" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>

        <!-- Researcher Details -->
        <Label Content="Researcher details:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="36" FontSize="20" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="0,36,0,0" Width="145" Height="29" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <Label Content="School:" HorizontalAlignment="Left" Margin="0,65,0,0" Width="145" Height="29" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <Label Content="Campus:" HorizontalAlignment="Left" Margin="0,94,0,0" Width="145" Height="29" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="0,123,0,0" Width="145" Height="29" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <Label Content="Degree:" HorizontalAlignment="Left" Margin="0,152,0,0" Width="145" Height="29" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <Label Content="Supervisor:" HorizontalAlignment="Left" Margin="0,181,0,0" Width="145" Height="29" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <Label Content="Current Job:" HorizontalAlignment="Left" Margin="0,210,0,0" Width="145" Height="29" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>

        <Label Content="Tenure:" HorizontalAlignment="Left" Margin="0,239,0,0" Width="145" Height="29" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <Label Content="Performance:" HorizontalAlignment="Left" Margin="0,268,0,0" Width="145" Height="29" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <Label Content="3-Year Average:" HorizontalAlignment="Left" Margin="0,297,0,0" Width="145" Height="29" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>

        <TextBlock Margin="9,41,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14" Height="18" Width="81" HorizontalAlignment="Left" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,70,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14" Height="18" Width="81" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,99,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14" Height="18" Width="81" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,128,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14" Height="18" Width="81" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,157,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14" Height="18" Width="80" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,186,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14" Height="18" Width="81" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,215,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14" Height="18" Width="81" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,244,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14" Height="18" Width="81" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,273,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14" Height="18" Width="80" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,302,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="14" Height="18" Width="81" Grid.Column="1"/>
        <Image Margin="174,41,4,266" Grid.Column="1" Source="{Binding PhotoURL}" />
    </Grid>
</UserControl>
